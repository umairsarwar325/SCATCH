<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="font-['helvetica_now_display']">
    <nav
      class="w-full px-5 py-3 flex items-center justify-between"
    >
      <h3 class="text-xl">Scatch</h3>
      <div class="flex justify-center gap-3 items-center w-[40%]">
        <% let isLoggedIn = typeof loggedIn == 'undefined' ? true : loggedIn;
        %> <% if (isLoggedIn) { %>
        <a href="/shop">
          <button class="px-3 py-1 bg-blue-600 text-white rounded-md">
            Shop
          </button>
        </a>
        <a href="/cart">
          <button class="px-3 py-1 bg-blue-600 text-white rounded-md">
            Cart
          </button>
        </a>
        <a href="/owners/create-product">
          <button class="px-3 py-1 bg-blue-600 text-white rounded-md">
            Create Product
          </button>
        </a>
        <a href="/logout">
          <button class="px-3 py-1 bg-red-600 text-white rounded-md">
            Logout
          </button>
        </a>
        <% } %>
      </div>
    </nav>
  </body>
</html>
