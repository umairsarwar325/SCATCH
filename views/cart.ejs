<%- include('./partials/header') %>
<div
  class="w-full h-[80vh] flex justify-center items-start flex-wrap flex-shrink-0 overflow-x-hidden overflow-y-scroll px-10 gap-3"
>
  <% userCart.cart.forEach((cartItem) => { %>
  <div class="w-full h-40% flex justify-between py-5">
    <div class="w-[30%] rounded-md overflow-hidden">
      <div class="w-full h-80 bg-[<%=cartItem.bgColor%>] flex items-center justify-center p-10">
        <img
        class="h-full"
        src="data:image/jpeg;base64,<%= cartItem.image.toString('base64') %>"
        alt=""
      />
      </div>
      <div class="w-full flex justify-between px-5 py-4 bg-[<%=cartItem.panelColor%>] text-[<%=cartItem.textColor%>]">
        <h3 class="text-2xl"><%= cartItem.name %></h3>
        <div class="flex items-center gap-2">
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
          ></i>
          <div class="px-2 py-1 rounded-md bg-white text-[<%=cartItem.textColor%>]">01</div>
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
          ></i>
        </div>
      </div>
      <div class="flex items-center justify-between px-5 py-3 text-[<%=cartItem.textColor%>] bg-[<%=cartItem.panelColor%>]">
        <h4 class="text-lg">Net Total</h4>
        <h2 class="text-lg">Rs <%=cartItem.price+20-cartItem.discount%></h2>
      </div>
    </div>
    <div class="w-[65%]">
      <h3 class="text-xl">Price Breakdown</h3>
      <div class="px-10 mt-5">
        <div class="flex mt-2">
          <h4 class="w-1/3">Total MRP</h4>
          <h4>Rs <%= cartItem.price %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Discount on MRP</h4>
          <h4>Rs <%= cartItem.discount %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Platform Fee</h4>
          <h4>Rs 20</h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Shipping Fee</h4>
          <h4>FREE</h4>
        </div>
      </div>
      <div class="w-full h-[1px] bg-black mt-10"></div>
      <div class="flex mt-5">
        <h3 class="w-1/3 text-xl">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">Rs <%=cartItem.price+20-cartItem.discount%></h3>
      </div>
      <form action=""></form>
    </div>
  </div>
  <% }) %>
</div>

<%- include('./partials/footer') %>
